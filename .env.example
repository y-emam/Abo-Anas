# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=True
FLASK_BASE_URL=https://your-ngrok-url.ngrok.io

# Speech-to-Text Configuration
# Set to 'true' to use Google Speech-to-Text real-time streaming
# Set to 'false' to use legacy OpenAI Whisper batch processing
USE_GOOGLE_SPEECH=true

# Google Cloud Speech-to-Text Configuration (NEW - Real-time Streaming)
# Download service account JSON from Google Cloud Console
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-cloud-service-account.json
GOOGLE_PROJECT_ID=your-google-cloud-project-id

# OpenAI Configuration (DEPRECATED - keeping for backward compatibility)
# This was used for Whisper, now replaced by Google Speech-to-Text
OPENAI_API_KEY=your-openai-api-key-here

# Eleven Labs Configuration (for Arabic Text-to-Speech)
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Optional: Specific voice ID for Arabic Syrian accent
# You can find voice IDs at https://api.elevenlabs.io/v1/voices
# Default voice ID is for a multilingual Arabic voice
ELEVENLABS_VOICE_ID=pNInz6obpgDQGcFmaJgB

# Google Gemini AI Configuration (for Conversation)
GEMINI_API_KEY=your-gemini-api-key-here

# Twilio Configuration (for Voice Calls)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
